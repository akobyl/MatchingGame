        <Image Name="image" Margin="10,10,842,615"/>
        <Label Name="title" Content="title" FontSize="48" FontFamily="Segoe UI Semibold" Margin="300,10,50,615" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Name="quitButton" Content="Quit" Click="quitButton_Click" HorizontalAlignment="Left" Margin="856,678,0,0" VerticalAlignment="Top" Width="150" Height="50" FontFamily="Arial" FontSize="32" Background="#FFFFC000" Foreground="White" BorderBrush="White"/>
        <Label Name="status" Content="" FontSize="24" FontFamily="Segoe UI Semibold" Margin="10,678,0,12" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="841"/>
    </Grid>
