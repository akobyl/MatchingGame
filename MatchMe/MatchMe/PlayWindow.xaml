<Window x:Class="MatchMe.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayWindow" Height="768" Width="1024"
        Loaded="WindowLoaded" Closing="WindowClosing">

    <Grid RenderTransformOrigin="0.104,0.95">
        <Canvas Name="mainCanvas" HorizontalAlignment="Left" Height="718" Margin="10,10,0,0" VerticalAlignment="Top" Width="996">
            <Label Name="title" Content="title" Canvas.Left="213" Canvas.Top="10" Height="76" Width="686" FontSize="48" FontFamily="Segoe UI Semibold"/>
            <Button Click="add_click" Content="Add shape" Canvas.Left="443" Canvas.Top="622" Width="75"/>
        </Canvas>
        <TextBox Name="statusBar" TextWrapping="Wrap" Text="TextBox" Canvas.Top="695" Margin="0,678,204,2"/>
        <Image Name="image" Margin="10,10,842,615"/>
        <Button Name="quitButton" Content="Quit" Click="quitButton_Click" HorizontalAlignment="Left" Margin="856,678,0,0" VerticalAlignment="Top" Width="150" Height="50" FontFamily="Arial" FontSize="32" Background="#FFFFC000" Foreground="White" BorderBrush="White"/>
    </Grid>
</Window>